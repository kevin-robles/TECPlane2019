<form action="/administrador/vueloActualizar" method="POST">
    <div class="home_title"><h2 style="font-size:40px">Ingrese los datos del vuelo actualizados</h2>
        <br>
        <label style="color:white ">Identificador actual

            <input type="text" id="actual" name="actual">
        </label>
        <br><br>

        <br>
        <label style="color:white ">Identificador

            <input type="text" id="idVuelo" name="idVuelo">
        </label>
        <br><br>

        <br>
        <label style="color:white ">Nombre

            <input type="text" id="nombre" name="nombre">
        </label>
        <br><br>

        <label style="color:white ">Origen

            <input type="text" id="origen" name="origen">
        </label>
        <br><br>

        <label style="color:white ">Destino   

            <input type="text" id="destino" name="destino">
        </label>
        <br><br>

        <label style="color:white ">Fecha ida

            <input type="date" id="ida" name="ida">
        </label>
        <br>
<br>
        <label style="color:white ">Fecha vuelta

            <input type="date" id="vuelta" name="vuelta">
        </label>
        <br><br>

        <label style="color:white ">Precio

            <input type="text" id="precio" name="precio">
        </label>
        <br><br>

        <label style="color:white ">Restricciones (separe las restricciones por coma)

            <input type="text" id="restricciones" name="restricciones">
        </label>
        <br><br>

        <label style="color:white ">Servicios del vuelo (separe los servicios por coma)

            <input type="text" id="caracteristicas" name="caracteristicas">
        </label>
        <br><br>

        <label style="color:white ">Estado

            <select id="estado" name="estado" style="width:170px">
                <option value=".">.</option>
                <option value="A tiempo">A tiempo</option>
                <option value="Retrasado">Retrasado</option>
                <option value="Cancelado">Cancelado</option>
            </select>

        </label>
        <br><br>

        <label style="color:white ">Cantidad máxima

            <input type="text" id="maximo" name="maximo">
        </label>
        <br><br>

        <button class="btn btn-primary" type="submit"> Actualizar información</button>
</div>
</form>